<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/calc.css">
  <link rel="stylesheet" href="../js/calculadora.js">
  <title>Calculadora</title>

</head>
<body>
  <div class="topo">
    <h1>Thomas Campos</h1>
    <div class="calc">
      <h2>CALCULADORA</h2>
      <p id="resultado"> resultado</p>
      <table>
        <tr>
          <td><button onclick="">AC</button></td>
          <td><button onclick="">+/-</button></td>
          <td><button onclick="">%</button></td>
          <td><button onclick="">&#247;</button></td>
        </tr>
        <tr>
          <td><button onclick="insert('7')">7</button></td>
          <td><button onclick="insert('8')">8</button></td>
          <td><button onclick="insert('9')">9</button></td>
          <td><button onclick="insert('*')">X</button></td>
        </tr>
        <tr>
          <td><button onclick="insert('4')">4</button></td>
          <td><button onclick="insert('5')">5</button></td>
          <td><button onclick="insert('6')">6</button></td>
          <td><button onclick="insert('-')">-</button></td>
        </tr>
        <tr>
          <td><button onclick="insert('1')">1</button></td>
          <td><button onclick="insert('2')">2</button></td>
          <td><button onclick="insert('3')">3</button></td>
          <td><button onclick="insert('+')">+</button></td>
        </tr>
        <tr>
          <td colspan="2"><button class="botao" onclick="insert('0')">0</button></td>
          <td><button onclick="insert(',')">,</button></td>
          <td><button onclick="insert('=')">=</button></td>
        </tr>
      </table>
    </div>
  </div>
  <script>
    function insert(n1){
document.getElementById('resultado').innerHTML = n1
}
  </script>
</body>
</html>
